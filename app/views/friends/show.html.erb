<div class="container-fluid px-5 rounded-4 mt-5" style="background-color: #eeeeee; color: #333; padding-top: 6%; padding-bottom: 6%;">
  <h1 class="display-4"><%= @friend.first_nane %> <%= @friend.last_name %></h1>
  <p class="lead mt-4"><%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %></p>
  <hr class="my-2">
  <p></p>

  <div class="d-flex justify-content-start"> 
    <%= link_to "Back", friends_path, class:"btn btn-dark me-2" %>
    <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary me-2" %>
    <%= button_to "Delete", @friend, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this friend?" }, class:"btn btn-danger me-2" %> 
  </div> 
</div>