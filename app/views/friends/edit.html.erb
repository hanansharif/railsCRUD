<% content_for :title, "Editing friend" %>

<h1>Editing friend</h1>
<br />
<%= render "form", friend: @friend %>

<%# <br> %>

<div class="d-flex justify-content-start"> 
  <%= link_to "Show", @friend, class:"btn btn-secondary mt-2 me-2" %>
  <%= button_to "Delete ", @friend, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this friend?" }, class: "btn btn-danger mt-2 me-2 px-4" %>
  <%= link_to "Back", friends_path, class:"btn btn-dark mt-2 me-2" %>
</div>
